SELF=$(readlink -f "$0")
HERE=${SELF%/*}

ARGV0=`basename "$ARGV0"`

export TARSIS_ETC_DATA_DIR="${HERE}/../share/TARSIS/data"
export LD_LIBRARY_PATH="${HERE}/../lib:$LD_LIBRARY_PATH"

EXEC="${HERE}/CalGUI"
ARGS=

# Detect tool
case "$ARGV0" in
    calcli*)
	EXEC="${HERE}/Calculator"
	ARGS=
	;;
esac

# Launch tool
exec  -a "$ARGV0" "$EXEC" `echo $ARGS` "$@"
